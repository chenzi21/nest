{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.spec.ts$",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "setupFiles": ["<rootDir>/src/test/setup.ts"],
  "moduleNameMapper": {
    "^@api/(.*)$": "<rootDir>/src/$1",
    "^@tools/(.*)$": "<rootDir>/../../tools/$1"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(@tools/prisma/generated/client)/)"
  ]
}
